{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "IdentityServer Debug",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${IdentityServer}/IdentityServer/bin/Debug/net8.0/IdentityServer.dll",
      "args": [],
      "cwd": "${IdentityServer}/IdentityServer",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${IdentityServer}/IdentityServer/Views"
      }
    }
  ]
}
