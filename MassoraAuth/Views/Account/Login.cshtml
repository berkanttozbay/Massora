@model IdentityServer.Models.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null; // layout kullanıyorsan bunu kaldır
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Giriş Yap</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            background-color: #001A2C;
            color: #ffffff;
            font-family: 'Segoe UI', sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-wrapper {
            display: flex;
            width: 90%;
            max-width: 1100px;
            height: 70vh;
            border-radius: 32px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0,0,0,0.3);
        }

        .left-panel, .right-panel {
            flex: 1;
            padding: 40px;
        }

        .left-panel {
            background-color: #026263;
            display: flex;
            flex-direction: column;
            justify-content: center;
            border-top-left-radius: 32px;
            border-bottom-left-radius: 32px;
        }

        .right-panel {
            background-color: #002137;
            display: flex;
            align-items: center;
            justify-content: center;
            border-top-right-radius: 32px;
            border-bottom-right-radius: 32px;
        }

        .login-box {
            width: 100%;
            max-width: 360px;
        }

        .form-control {
            background-color: #001A2C;
            border: 1px solid #009fc9;
            border-radius: 12px;
            color: #fff;
        }

            .form-control:focus {
                border-color: #1abcff;
                box-shadow: none;
                background-color: #001A2C;
                color: #fff;
            }

        .btn-login {
            background-color: #1abcff;
            border: none;
            border-radius: 12px;
            padding: 10px 0;
            font-weight: bold;
        }

            .btn-login:hover {
                background-color: #129ed8;
            }

        .form-check-label {
            color: #ccc;
        }

        .text-danger {
            font-size: 0.875rem;
        }

        .animation-container {
            margin-top: 40px;
        }

            .animation-container img {
                width: 100%;
                max-width: 400px;
                border-radius: 12px;
            }
    </style>
</head>
<body>

    <div class="login-wrapper">

        <!-- Sol Panel -->
        <div class="left-panel">
            <h1>Manage your construction easily with Massora</h1>
            <p>Create,update and track your vehicles real time.</p>

            <div class="animation-container">
                <!-- Buraya bir animasyon/gif/lottie yerleştirebilirsin -->
                <img src="~/images/construction.gif" alt="Construction Animation" />
            </div>
        </div>

        <!-- Sağ Panel -->
        <div class="right-panel">
            <div class="login-box">
                <h2>Welcome back,<br />please login.</h2>
                <form asp-action="Login" method="post">
                    <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">E-mail</label>
                        <input asp-for="Username" class="form-control" placeholder="example@domain.com" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="••••••" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="form-check">
                            <input asp-for="RememberLogin" class="form-check-input" />
                            <label asp-for="RememberLogin" class="form-check-label">Remember Me</label>
                        </div>
                        <a href="#" class="text-decoration-none text-light small">Forgot Password?</a>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-login">Log in</button>
                    </div>
                </form>
            </div>
        </div>

    </div>

</body>
</html>
